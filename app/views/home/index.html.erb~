<script type="text/javascript">
    $(document).ready(function() {

	  $('#artwork').hide();
	  
	  $('#show').click(function() {
	    $('#artwork').slideUp('slow');
	    return false;
	  });

	  $('#hide').click(function() {
	    $('#artwork').slideDown('slow');
	    return false;
	  });

	});
</script>
